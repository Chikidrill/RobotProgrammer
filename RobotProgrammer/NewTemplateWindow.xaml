<Window x:Class="RobotProgrammer.View.NewTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый шаблон" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Имя шаблона -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Имя шаблона:"/>
            <TextBox Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Код шаблона и параметры -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Код шаблона (используйте {ParameterName} для параметров)"/>
            <TextBox Text="{Binding TemplateCode, UpdateSourceTrigger=PropertyChanged}" 
                     AcceptsReturn="True" Height="100"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <Button Content="Добавить параметр" Command="{Binding AddParameterCommand}" Width="120" Margin="0,0,5,0"/>
                <Button Content="Удалить параметр" Command="{Binding RemoveParameterCommand}" Width="120"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding Parameters}" AutoGenerateColumns="False" Height="100">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя" Binding="{Binding Name, Mode=TwoWay}" />
                    <DataGridTextColumn Header="Значение" Binding="{Binding Value, Mode=TwoWay}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Кнопки OK/Отмена -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Command="{Binding OkCommand}" />
            <Button Content="Отмена" Width="80" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
